@tailwind base;
@tailwind components;
@tailwind utilities;

/* Design tokens */
:root {
  --bg: #FFFFFF;
  --bg-subtle: #F8FAFC;
  --bg-card: #FFFFFF;
  --text: #0F172A;
  --text-muted: #64748B;
  --accent: #3B82F6;
  --accent-hover: #2563EB;
  --border: #E2E8F0;
  --border-hover: #CBD5E1;
  --radius: 8px;
  --shadow: 0 1px 3px 0 rgba(0, 0, 0, 0.1), 0 1px 2px 0 rgba(0, 0, 0, 0.06);
  --shadow-lg: 0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05);
}

[data-theme="dark"] {
  --bg: #0F172A;
  --bg-subtle: #1E293B;
  --bg-card: #1E293B;
  --text: #F8FAFC;
  --text-muted: #94A3B8;
  --accent: #60A5FA;
  --accent-hover: #3B82F6;
  --border: #334155;
  --border-hover: #475569;
  --shadow: 0 1px 3px 0 rgba(0, 0, 0, 0.3), 0 1px 2px 0 rgba(0, 0, 0, 0.2);
  --shadow-lg: 0 10px 15px -3px rgba(0, 0, 0, 0.3), 0 4px 6px -2px rgba(0, 0, 0, 0.2);
}

html {
  scroll-behavior: smooth;
  color-scheme: light dark;
}

body {
  background: var(--bg);
  color: var(--text);
  text-rendering: optimizeLegibility;
  font-feature-settings: "ss01" on, "ss02" on;
  transition: background-color 0.3s ease, color 0.3s ease;
}

/* Typographic rhythm */
p {
  line-height: 1.625;
}

.max-w-content {
  max-width: 72ch;
}

/* Custom classes */
.bg-base {
  background-color: var(--bg);
}

.bg-base-subtle {
  background-color: var(--bg-subtle);
}

.bg-card {
  background-color: var(--bg-card);
}

.text-base {
  color: var(--text);
}

.text-muted {
  color: var(--text-muted);
}

.text-accent {
  color: var(--accent);
}

.border-base {
  border-color: var(--border);
}

.shadow-card {
  box-shadow: var(--shadow);
}

.shadow-card-lg {
  box-shadow: var(--shadow-lg);
}

/* Hero gradient */
.hero-gradient {
  background: linear-gradient(135deg, var(--bg-subtle) 0%, var(--bg) 100%);
}

/* Professional button styles */
.btn-primary {
  background: var(--accent);
  color: white;
  border: 1px solid var(--accent);
  padding: 0.75rem 1.5rem;
  border-radius: var(--radius);
  font-weight: 500;
  transition: all 0.2s ease;
  box-shadow: var(--shadow);
}

.btn-primary:hover {
  background: var(--accent-hover);
  transform: translateY(-1px);
  box-shadow: var(--shadow-lg);
}

.btn-outline {
  background: transparent;
  color: var(--text);
  border: 1px solid var(--border);
  padding: 0.75rem 1.5rem;
  border-radius: var(--radius);
  font-weight: 500;
  transition: all 0.2s ease;
}

.btn-outline:hover {
  background: var(--bg-subtle);
  border-color: var(--border-hover);
  transform: translateY(-1px);
}

/* Card styles */
.card {
  background: var(--bg-card);
  border: 1px solid var(--border);
  border-radius: var(--radius);
  padding: 1.5rem;
  box-shadow: var(--shadow);
  transition: all 0.2s ease;
}

.card:hover {
  transform: translateY(-2px);
  box-shadow: var(--shadow-lg);
}

/* 12-col grid + spacing */
.container-grid {
  display: grid;
  grid-template-columns: repeat(12, 1fr);
  gap: 0.5rem;
}

@media (min-width: 768px) {
  .container-grid {
    gap: 0.75rem;
  }
}

/* Focus ring */
.focus-ring {
  outline: none;
}

.focus-ring:focus-visible {
  outline: 2px solid var(--accent);
  outline-offset: 2px;
}

/* Skip link */
.skip-link {
  position: absolute;
  top: -40px;
  left: 0;
  background: var(--bg-card);
  color: var(--text);
  padding: 8px 12px;
  z-index: 100;
  border: 1px solid var(--border);
  border-radius: 4px;
  box-shadow: var(--shadow);
}

.skip-link:focus {
  top: 8px;
}

/* Hover effects */
a:hover,
button:hover {
  opacity: 0.9;
}

.section {
  padding: 2rem 0;
}

@media (min-width: 768px) {
  .section {
    padding: 3rem 0;
  }
}

/* Typography */
h1,
h2,
h3 {
  font-weight: 600;
  letter-spacing: -0.025em;
}

/* Focus styles */
:focus-visible {
  outline: 2px solid var(--accent);
  outline-offset: 2px;
}